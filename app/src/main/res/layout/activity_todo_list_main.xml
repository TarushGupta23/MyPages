<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".todoList.TodoListMainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/todoList_viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todoList_tabLayout" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/todoList_tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/deepBlue3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/coral"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="3dp"
        app:tabMinWidth="90dp"
        app:tabMode="auto"
        app:tabSelectedTextColor="@color/coral"
        app:tabTextColor="@color/ice" />

</androidx.constraintlayout.widget.ConstraintLayout>